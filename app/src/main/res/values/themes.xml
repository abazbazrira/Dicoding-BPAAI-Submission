<resources>
  <!-- Base application theme. -->
  <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="TextInputLayoutFilledStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    <item name="boxBackgroundColor">@color/transparent</item>
    <item name="hintTextColor">@color/purple_200</item>
    <item name="android:textColorHint">@color/purple_500</item>
  </style>

  <style name="TextInputLayoutOutlinedStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxBackgroundColor">@color/transparent</item>
    <item name="hintTextColor">@color/purple_200</item>
    <item name="android:textColorHint">@color/purple_500</item>
  </style>

  <style name="TextButtonStyle" parent="ThemeOverlay.Material3.Button.TextButton">
    <item name="android:textColor">@color/purple_500</item>
  </style>
</resources>